---
import { Icon } from 'astro-icon/components';

import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
}

const {
  label = 'Toggle between Dark and Light mode',
  class: className = '',
  iconClass = 'w-4 h-4',
} = Astro.props;
---

{!(UI.theme && UI.theme.endsWith(':only')) && (
  <button
    type="button"
    class={`relative inline-flex h-7 w-14 items-center rounded-full bg-gradient-to-r from-amber-400 to-orange-500 dark:from-indigo-500 dark:to-purple-600 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-amber-300 dark:focus:ring-indigo-400 focus:ring-offset-2 shadow-lg hover:shadow-xl ${className}`}
    aria-label={label}
    data-aw-toggle-color-scheme
  >
    <span class="relative inline-block h-5 w-5 transform transition-transform duration-300 translate-x-0.5 dark:translate-x-[2.125rem] flex items-center justify-center">
      <Icon name="tabler:sun" class={`${iconClass} text-white absolute inset-0 m-auto z-10 block dark:!hidden drop-shadow-[0_0_8px_rgba(255,255,255,0.9),0_0_12px_rgba(251,191,36,0.6)] transition-all duration-300 animate-pulse`} style="animation-duration: 3s;" />
      <Icon name="tabler:moon" class={`${iconClass} text-white absolute inset-0 m-auto z-10 !hidden dark:!block drop-shadow-[0_0_8px_rgba(255,255,255,0.9),0_0_12px_rgba(129,140,248,0.6)] transition-all duration-300`} />
    </span>
  </button>
)}
